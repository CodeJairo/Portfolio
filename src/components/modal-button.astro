<div x-data="{ open: false }" class="relative z-50">
  <!-- Botón flotante con icono -->
  <button
    @click="open = true"
    class="fixed bottom-6 right-6 bg-gradient-to-tr from-purple-600 to-indigo-600 text-white shadow-xl px-5 py-3 rounded-full flex items-center gap-2 hover:cursor-pointer hover:scale-105 transition transform duration-300"
    aria-label="Abrir contacto"
  >
    🤝 <span class="hidden sm:inline">Contacto</span>
  </button>

  <!-- Overlay -->
  <div
    x-show="open"
    x-transition.opacity
    class="fixed inset-0 bg-black/50 backdrop-blur-md flex items-center justify-center"
  >
    <!-- Caja del modal -->
    <div
      @click.away="open = false"
      class="bg-white/10 dark:bg-white/10 backdrop-blur-lg border border-white/20 shadow-2xl rounded-2xl max-w-md w-full mx-4 p-8 text-white relative"
      x-transition
    >
      <!-- Botón cerrar -->
      <button
        @click="open = false"
        class="absolute top-3 right-4 hover:cursor-pointer text-gray-300 hover:text-red-500 text-2xl font-light"
        aria-label="Cerrar modal"
      >
        &times;
      </button>

      <!-- Encabezado -->
      <h2 class="text-2xl font-bold mb-1 text-center">
        ¿Cómo deseas contactarme?
      </h2>
      <p class="text-sm text-center mb-6 text-gray-300">
        Elige el medio que prefieras 👇
      </p>

      <!-- Opciones -->
      <div class="flex flex-col gap-4">
        <a
          href="mailto:jairoehr@gmail.com"
          rel="noopener noreferrer"
          target="_blank"
          class="bg-indigo-600 hover:bg-indigo-700 text-white text-center py-3 rounded-xl transition duration-300 shadow-lg"
        >
          📧 Correo electrónico
        </a>

        <a
          href="https://www.linkedin.com/in/codejairo/"
          rel="noopener noreferrer"
          target="_blank"
          class="bg-purple-600 hover:bg-purple-700 text-white text-center py-3 rounded-xl transition duration-300 shadow-lg"
        >
          💼 LinkedIn
        </a>
      </div>
    </div>
  </div>
</div>
