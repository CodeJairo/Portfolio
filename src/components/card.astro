---
// ProjectCard.astro
import { Image } from "astro:assets";

interface Tech {
  name: string;
  url: string;
}

interface Props {
  img: any; // puedes usar StaticImageMetadata si prefieres
  alt: string;
  title: string;
  description: string;
  techs: Tech[];
}

const { img, alt, title, techs, description } = Astro.props;
---

<div
  class="bg-zinc-900 text-white rounded-lg overflow-hidden shadow-lg flex flex-col h-full"
>
  <div class="w-full h-48 md:h-56 overflow-hidden">
    <Image src={img} alt={alt} class="object-cover w-full h-full" />
  </div>
  <div class="p-4 flex flex-col justify-between grow">
    <div>
      <h3 class="text-xl font-semibold mb-1">{title}</h3>
      <p class="text-sm text-zinc-300 mb-4">{description}</p>
    </div>
    <div class="flex flex-wrap gap-2 mt-auto">
      {
        techs.map((tech) => (
          <a
            href={tech.url}
            target="_blank"
            rel="noopener noreferrer"
            class="text-xs bg-gradient-to-r from-purple-500 to-pink-500 hover:scale-95 transition px-3 py-1 rounded-full font-medium"
          >
            {tech.name}
          </a>
        ))
      }
    </div>
  </div>
</div>
