<input type="checkbox" id="theme-toggle" class="l" aria-label="Toggle theme" />

<script>
  // @ts-nocheck
  const THEME_KEY = "theme";
  const ANIMATING_ATTR = "data-is-animating";

  const getSavedTheme = () => localStorage.getItem(THEME_KEY) || "dark";

  const updateThemeInDOM = () => {
    const isDark = document.documentElement.classList.contains("dark");
    const newTheme = isDark ? "light" : "dark";

    document.documentElement.classList.toggle("dark", newTheme === "dark");
    localStorage.setItem(THEME_KEY, newTheme);
    return newTheme;
  };

  const syncUI = (checkbox, theme) => {
    if (checkbox) checkbox.checked = theme === "light";
  };

  const handleToggle = (event) => {
    const checkbox = event.currentTarget;
    const { clientX: x, clientY: y } = event;

    // Bloqueamos transiciones de CSS para que el círculo sea fluido
    document.documentElement.setAttribute(ANIMATING_ATTR, "true");

    // Fallback para navegadores antiguos (Safari < 18, Firefox antiguo)
    if (!document.startViewTransition) {
      syncUI(checkbox, updateThemeInDOM());
      document.documentElement.removeAttribute(ANIMATING_ATTR);
      return;
    }

    // Iniciamos la transición de vista
    const transition = document.startViewTransition(() => {
      syncUI(checkbox, updateThemeInDOM());
    });

    // Animación del círculo
    transition.ready.then(() => {
      const endRadius = Math.hypot(
        Math.max(x, innerWidth - x),
        Math.max(y, innerHeight - y),
      );

      document.documentElement.animate(
        {
          clipPath: [
            `circle(0px at ${x}px ${y}px)`,
            `circle(${endRadius}px at ${x}px ${y}px)`,
          ],
        },
        {
          duration: 450,
          easing: "cubic-bezier(0.4, 0, 0.2, 1)",
          pseudoElement: "::view-transition-new(root)",
        },
      );
    });

    // Limpieza al finalizar
    transition.finished.finally(() => {
      document.documentElement.removeAttribute(ANIMATING_ATTR);
    });
  };

  const setup = () => {
    const toggle = document.querySelector("#theme-toggle");
    if (!toggle) return;

    // Sincronizar el checkbox al cargar la página
    syncUI(toggle, getSavedTheme());

    // Usamos 'click' para obtener las coordenadas exactas del cursor
    toggle.addEventListener("click", handleToggle);
  };

  // Astro soporta navegación SPA, esto asegura que funcione siempre
  setup();
  document.addEventListener("astro:page-load", setup);
</script>

