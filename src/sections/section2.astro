---
import Card from "../components/card.astro";
import gato from "../assets/gato.png";
import higinexPreview from "../assets/higinex/higinex-preview.png";
import pleromaPreview from "../assets/pleroma/pleroma-preview.png";
---

<!-- bg-white dark:bg-zinc-900 -->
<section
  id="proyectos"
  class="bg-gradient-to-b from-white to-gray-100 dark:from-black dark:to-zinc-900 py-20 px-4 sm:px-6 lg:px-16 border-t not-lg:border-b border-dashed"
>
  <div class="max-w-7xl mx-auto space-y-24">
    <!-- Proyecto 1: Higinex -->
    <div class="flex flex-col lg:flex-row items-center gap-12">
      <div class="w-full lg:w-1/2">
        <Card
          img={higinexPreview}
          alt="Higinex - Plataforma B2B de comercio electrónico"
          title="Higinex"
          description="Plataforma B2B que digitaliza el ciclo completo de ventas: catálogo con precios personalizados, carrito, checkout, gestión de pedidos y panel de administración."
          techs={[
            { name: "Angular 21", url: "https://angular.dev/" },
            { name: "NestJS", url: "https://nestjs.com/" },
            { name: "PostgreSQL", url: "https://www.postgresql.org/" },
            { name: "TailwindCSS", url: "https://tailwindcss.com/" },
          ]}
          href="/projects/higinex"
        />
      </div>
      <div class="w-full lg:w-1/2 text-left">
        <h3 class="text-3xl font-bold text-zinc-900 dark:text-white mb-4">
          Higinex - Plataforma B2B de E-commerce
        </h3>
        <p class="text-zinc-600 dark:text-zinc-300 text-lg leading-relaxed">
          Sistema completo de ventas B2B para distribuidora de productos de
          higiene industrial y personal. Permite a clientes autorizados realizar
          pedidos 24/7 con catálogo, precios personalizados, carrito
          persistente, checkout y panel de administración completo.
        </p>
        <a
          href="/projects/higinex"
          class="inline-block mt-6 px-6 py-3 rounded-full bg-gradient-to-r from-purple-500 to-pink-500 text-white font-bold hover:scale-105 transition-transform shadow-lg"
        >
          Ver proyecto →
        </a>
      </div>
    </div>

    <!-- Proyecto 2: Pleroma -->
    <div class="flex flex-col lg:flex-row-reverse items-center gap-12">
      <div class="w-full lg:w-1/2">
        <Card
          img={pleromaPreview}
          alt="Pleroma - Sistema de Gestión de Contratación Pública"
          title="Pleroma"
          description="Sistema integral para digitalizar y automatizar el ciclo de vida completo de la contratación pública. Generación automática de documentos contractuales."
          techs={[
            { name: "Angular 21", url: "https://angular.dev/" },
            { name: "NestJS", url: "https://nestjs.com/" },
            { name: "PostgreSQL", url: "https://www.postgresql.org/" },
            { name: "Amazon S3", url: "https://aws.amazon.com/s3/" },
          ]}
          href="/projects/pleroma"
        />
      </div>
      <div class="w-full lg:w-1/2 text-left">
        <h3 class="text-3xl font-bold text-zinc-900 dark:text-white mb-4">
          Pleroma - Gestión de Contratación Pública
        </h3>
        <p class="text-zinc-600 dark:text-zinc-300 text-lg leading-relaxed">
          Sistema que digitaliza y automatiza el ciclo de vida de la
          contratación pública para entidades prestadoras de servicios públicos
          domiciliarios en Colombia. Genera documentos con datos inyectados
          automáticamente, gestiona CDPs, contratistas y resoluciones.
        </p>
        <a
          href="/projects/pleroma"
          class="inline-block mt-6 px-6 py-3 rounded-full bg-gradient-to-r from-emerald-500 to-teal-500 text-white font-bold hover:scale-105 transition-transform shadow-lg"
        >
          Ver proyecto →
        </a>
      </div>
    </div>

    <!-- Proyecto 3 -->
    <div class="flex flex-col lg:flex-row items-center gap-12">
      <div class="w-full lg:w-1/2">
        <Card
          img={gato}
          alt="Imagen de TaskFlow"
          title="TaskFlow"
          description="Gestor de tareas colaborativas con autenticación OAuth y notificaciones."
          techs={[
            { name: "React", url: "https://reactjs.org/" },
            { name: "Express.js", url: "https://expressjs.com/" },
            { name: "PostgreSQL", url: "https://www.postgresql.org/" },
          ]}
        />
      </div>
      <div class="w-full lg:w-1/2 text-left">
        <h3 class="text-3xl font-bold text-zinc-900 dark:text-white mb-4">
          TaskFlow
        </h3>
        <p class="text-zinc-600 dark:text-zinc-300 text-lg leading-relaxed">
          TaskFlow permite a equipos organizar y visualizar sus tareas en tiempo
          real. Su sistema de notificaciones y autenticación con OAuth lo hace
          ideal para ambientes colaborativos profesionales.
        </p>
      </div>
    </div>
  </div>
</section>
